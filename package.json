  "license": "MIT",
  "repository": "https://github.com/luanglopes/vuttr-api.git",
  "scripts": {
    "dev:server": "ts-node-dev -r tsconfig-paths/register --inspect --transpileOnly --ignore-watch node_modules src/shared/infra/http/server.ts",
